library(shiny)
library(DT)

updateDate <- format(file.info("file path")$mtime, "%Y-%m-%d")


# Define UI for application that draws a histogram
ui <- fluidPage(

    # Application title
    titlePanel("Old Faithful Geyser Data"),
    h1(paste0("Dit dashboard is voor het laatst geupdate op", updateDate)),
    h2(paste0("De KIWA data is voor het laatst geupdate op", max(test$Scrapedatum))), 
    DT::dataTableOutput("summary"))

#     # Sidebar with a slider input for number of bins 
#     sidebarLayout(
#         sidebarPanel(
